                            {% if post.image %}
                                <div class="post_img">
                                    <div>
                                        <img class="img-responsive img-blog" src="{{ post.image }}" alt=""/>
                                    </div>
                                </div>
                            {% endif %}
                            <div class="post_date">
                                <span class="day">{{ post.created_at | moment('d') }}</span>
                                <span class="month">{{ post.created_at | moment('MMM') }}</span>
                            </div>
                            <div class="post_content">
                                <div class="post_meta">
                                    <h2>
                                        <a href="#">{{ post.title }}</a>
                                    </h2>
                                    <div class="metaInfo">
                                        <span><i class="fa fa-calendar"></i> <a href="#">{{ post.created_at | moment('Do MMM YY') }}</a> </span>
                                        <span><i class="fa fa-user"></i> By <a href="#">{{ post['user.display_name'] }}</a> </span>
                                    </div>
                                </div>
                                <p>{{ post.full_text |safe }}</p>
                            </div>
                            <ul class="shares">
                                <li class="shareslabel"><h3>Chia sẻ</h3></li>

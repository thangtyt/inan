{% if posts %}
    <section class="info_service">
        <div class="container">
            <div class="row sub_content">
                {% for post in posts %}
                <div class="col-sm-4 col-md-4 col-lg-4">
                    <div class="serviceBox_3">
                        <div class="service_3_img">
                            <a href="/blog/posts/{{ post.id }}/{{ post.alias }}">
                                <img alt="" src="{{ post.image }}">
                            </a>
                        </div>
                        <div class="service_3_detail">
                            <a href="/blog/posts/{{ post.id }}/{{ post.alias }}"><h3>{{ post.title }}l</h3></a>
                            <p>{{ post.intro_text | title(250,'...') | safe }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endif %}
{% if widget %}
<div id="top-bar">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 hidden-xs top-info">
                <span>{{ widget.company_name }}</span>
                <span><i class="fa fa-phone"></i>Điện thoại: {{ widget.phone }}</span>
                <span><i class="fa fa-envelope"></i>Email: {{ widget.email }}</span>
            </div>
            <div class="col-sm-2 top-info">
                <ul>
                    <li><a target="_blank" href="https://www.facebook.com/{{ widget.facebook }}" class="my-facebook"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="skype:{{ widget.skype }}?chat" class="my-skype"><i class="fa fa-skype"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endif %}
<div class="eve-tab sidebar-tab">
    <ul id="myTab" class="nav nav-tabs">
        <li class="active"><a href="#Popular" data-toggle="tab">{{ widget.title }}</a></li>
    </ul>

    <div id="myTabContent" class="tab-content clearfix">
        <div class="tab-pane fade active in" id="Popular">
            <ul class="recent_tab_list">
                {% for post in posts %}
                <li>
                    <span>
                        <a href="/blog/posts/{{ post.id }}/{{ post.alias }}">
                            <img src="{{ post.image }}" height="50" width="50" alt="" /></a>
                    </span>
                    <a href="/blog/posts/{{ post.id }}/{{ post.alias }}">{{ post.title }}</a>
                    <i>{{ post.created_at | moment('Do MMM YY') }}</i>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

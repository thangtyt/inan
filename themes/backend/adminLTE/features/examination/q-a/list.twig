{% extends '_layout.' + getConfig('viewExtension') %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            {{ toolbar | safe }}
            <div class="box box-solid box-primary">
                <div class="box-body table-responsive">
                    {% include 'basic_table/_table.' + getConfig('viewExtension') %}
                    {{ paginateLinks(totalPage, currentPage,'/admin/blog/posts/page/{page}/sort/'+currentColumn+'/'+currentOrder+queryString)|safe }}
                </div>
            </div>
        </div>
        {% if page.id %}
            {{ getPluginExtension("page_" + page.id) | async | safe }}
        {% endif %}
    </div>
{% endblock %}
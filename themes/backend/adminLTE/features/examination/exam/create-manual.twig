{% extends '_layout.' + getConfig('viewExtension') %}
{% block cssExtends %}
    <link href="/backend/adminLTE/assets/plugins/ckeditor/plugins/codemirror/theme/monokai.css" rel="stylesheet">
    <link href="/backend/adminLTE/assets/plugins/select2/select2.css" rel="stylesheet">
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <form id="edit-form" method="post">
                {{ toolbar | safe }}
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#exam" data-toggle="tab" aria-expanded="true">
                                <i class="fa fa-question-circle padd-right-5"></i> &nbsp;&nbsp;&nbsp;Infomations</a>
                        </li>
                        <li class="">
                            <a href="#question" data-toggle="tab" aria-expanded="false">
                                <span class="glyphicon glyphicon-ok-sign"> </span> &nbsp;&nbsp;&nbsp;Choose Question
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        {#Tab question#}
                        <div class="row tab-pane active" id="exam">
                            <div class="col-md-9 col-sm-9">
                                <div class="form-group">
                                    <label for="title">Title</label>
                                    <input class="form-control" value="{{ exam.title }}" name="title" id="title" required="require"/>
                                </div>
                                <div class="form-group">
                                    <label for="desc">Desc <span class="required">*</span></label>
                                    <textarea class="form-control" name="desc" id="desc">{{ exam.desc }}</textarea>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-3">
                                <div class="form-group">
                                    <label>Subject</label>
                                    <select class="form-control" name="subject_id" required="required" onchange="loadSections()">
                                        <option> --Choose Subject-- </option>
                                        {% for subject in subjects %}
                                            <option value="{{ subject.id }}">{{ subject.title }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Total Mark</label>
                                    <input type="number" name="total_mark" id="total_mark" class="form-control" value="{{ exam.total_mark }}"/>
                                </div>
                                <div class="form-group">
                                    <label>Total Question</label>
                                    <input type="number" name="total_question" id="total_question" class="form-control" value="{{ exam.total_question }}" required="require"/>
                                </div>
                                <div class="form-group">
                                    <label>Total Time <span> ( minute ) </span> </label>
                                    <input type="number" name="total_time" id="total_time" class="form-control" value="{{ exam.total_time }}" required="require"/>
                                </div>
                                <div class="form-group">
                                    <label>Level</label>
                                    <select class="form-control" name="level">
                                        <option value="1" {% if exam.level == 1%}selected="selected" {% endif %}>1</option>
                                        <option value="2" {% if exam.level == 2%}selected="selected" {% endif %}>2</option>
                                        <option value="3" {% if exam.level == 3%}selected="selected" {% endif %}>3</option>
                                        <option value="4" {% if exam.level == 4%}selected="selected" {% endif %}>4</option>
                                        <option value="5" {% if exam.level == 5%}selected="selected" {% endif %}>5</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        {#tab content answer#}
                        <div class="row tab-pane" id="question">
                            <div class="col-md-12" id="examDetail">
                                <div class="form-group">
                                    <label for="sections">Choose section</label>
                                    <br>
                                    <select multiple="multiple" style="width: 100%" name="sections" id="sections"
                                            class="form-control">
                                    </select>
                                </div>

                            </div>
                        </div>
                     </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block jsExtends %}
    <script src="/backend/adminLTE/assets/plugins/ckeditor/ckeditor.js"></script>
    <script src="/backend/adminLTE/assets/plugins/select2/select2.min.js" type="text/javascript"></script>

    <script>
        var select2Sections = $('#sections');

//        CKEDITOR.replace( 'question', {
//            height: 200
//        } );
        CKEDITOR.replace( 'desc', {
            height: 200,
            toolbar : [
                ['Styles','Format','Font','FontSize'],
                ['Bold','Italic','Underline','StrikeThrough','-','Undo','Redo','-','Cut','Copy','Paste','Find','Replace'],
                ['NumberedList','BulletedList','-','JustifyLeft','JustifyCenter','JustifyRight','JustifyBlock'],
                ['Image','Table','-','TextColor','BGColor','Source']
            ]
        } );
        if ( CKEDITOR.env.ie && CKEDITOR.env.version == 8 ) {
            document.getElementById( 'ie8-warning' ).className = 'tip alert';
        }
        $(function () {
            /* BEGIN init select2 */
            select2Sections.select2({
                templateSelection: function (option) {
                    var text = $(option.element).text().trim();
                    text = text.replace(/^[â€”]+/, '');
                    return text;
                }
            });
            select2Sections.on('select2:select', function (e) {
                addSection(e.params.data);

            });
            select2Sections.on('select2:unselect', function (e) {
                removeSection(e.params.data);
            });
        });

    </script>
    <script src="/backend/adminLTE/dist/js/exam.js"></script>
{% endblock %}

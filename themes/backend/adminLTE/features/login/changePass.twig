<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>MCBooks | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="/backend/adminLTE/assets/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/backend/adminLTE/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/backend/adminLTE/assets/plugins/iCheck/square/blue.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        <b>MCBooks</b>CMS
    </div>
    {% if error %}
        <div class="callout callout-danger">
            <h4>Warning!</h4>

            <p>{{ error.message }}</p>
        </div>

    {% else %}
        <div class="login-box-body">
            <p class="login-box-msg">Update New Password</p>
            {% include '_messages.' + getConfig('viewExtension') %}

            <form method="post" id="changePassForm">
                <div class="form-group has-feedback">
                    <input name="password" type="password" id="password" class="form-control" placeholder="Password" min="6" required>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback" id="re-password-div">
                    <input name="re-password" type="password" id="re-password" value="" class="form-control" placeholder="Re-Password" min="6" required>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span id="error-block" class="help-block hidden">Password and re-password is not match !</span>
                </div>
                <div class="row">

                    <div class="col-xs-6">
                        <button type="reset" class="btn btn-default btn-block btn-flat">
                            Reset
                        </button></div>
                    <!-- /.col -->
                    <div class="col-xs-6">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">
                            Update
                        </button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
    {% endif %}

    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

<!-- jQuery 2.1.4 -->
<script src="/backend/adminLTE/assets/plugins/jQuery/jQuery-2.1.4.min.js"></script>
<!-- Bootstrap 3.3.5 -->
<script src="/backend/adminLTE/assets/bootstrap/js/bootstrap.min.js"></script>
<script>
    {% if not error %}
        $('#changePassForm').submit(function (event) {
            if ($('#password').val() !== $('#re-password').val()){
                $('#re-password-div').addClass('has-error');
                $('#error-block').removeClass('hidden');
                $('#error-block').fadeOut(5000, function () {
                    $('#re-password-div').removeClass('has-error');
                    $('#error-block').addClass('hidden');
                })
                return false;
            }else{
                return true;
            }

        });
    {% endif %}
</script>
</body>
</html>

{% extends '_layout.' + getConfig('viewExtension') %}

{% block content %}
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>{{ errorQAStatistic }}</h3>
                        <p>Câu hỏi lỗi</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-list-ul"></i>
                    </div>
                    <a href="/admin/qa/report" class="small-box-footer">Xem thêm <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>{{ questionStatistic }}</h3>
                        <p>Câu hỏi trắc nghiệm</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="/admin/qa/choice" class="small-box-footer">Xem thêm <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>{{ userStatistic }}</h3>
                        <p>Người dùng</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="/admin/users" class="small-box-footer">Xem thêm <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>{{ examStatistic }}</h3>
                        <p>Đề thi kích hoạt</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="/admin/exam/" class="small-box-footer">Xem thêm <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div><!-- ./col -->
        </div><!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            {% if newestExams %}
            <section class="col-lg-6 connectedSortable">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Đề thi mới nhất</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <ul class="products-list product-list-in-box">
                            {% for exam in newestExams %}
                            <!-- /.item -->
                            <li class="item">
                                <div class="product-img">
                                    <img src="{{ '/img/noImage.png' if not exam.icon else exam.icon }}" alt="Product Image">
                                </div>
                                <div class="product-info">
                                    <a href="/admin/exam/{{ exam.id }}" class="product-title">{{ exam.title | title(60,'...') | safe }} <span class="label label-danger pull-right"></span></a>
                            <span class="product-description">
                              {{ exam['subject.title'] | title(150,'...') | safe }}
                            </span>
                                </div>
                            </li>
                            <!-- /.item -->
                            {% endfor %}
                        </ul>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer text-center">
                        <a href="/admin/exam" class="uppercase">Xem tất cả để thì</a>
                    </div>
                    <!-- /.box-footer -->
                </div>
            </section>
            {% endif %}
            {% if newestUsers %}
            <section class="col-lg-6 connectedSortable">
                <div class="box box-danger">
                    <div class="box-header with-border">
                        <h3 class="box-title">Người dùng mới nhất</h3>

                        <div class="box-tools pull-right">
                            {#<span class="label label-danger">Newest Members</span>#}
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>

                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <ul class="users-list clearfix">
                            {% for newUser in  newestUsers %}
                            <li>
                                {% set url_image = '/img/users/admin.png' %}
                                {% if newUser.user_image_url %}
                                    {% set url_image = user_image_url %}
                                {% endif %}
                                <img src="{{ '/img/users/admin.png' if not newUser.user_image_url else newUser.user_image_url }}" alt="User Image">
                                <a class="users-list-name" href="/admin/users/{{ newUser.id }}">{{ newUser.display_name | title(15,'..') }}</a>
                                <span class="users-list-date">{{ newUser.user_registered | moment }}</span>
                            </li>
                            {% endfor %}
                        </ul>
                        <!-- /.users-list -->
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer text-center">
                        <a href="/admin/users" class="uppercase">Xem tất cả người dùng</a>
                    </div>
                    <!-- /.box-footer -->
                </div>
            </section><!-- right col -->
            {% endif %}
        </div><!-- /.row (main row) -->
{% endblock %}